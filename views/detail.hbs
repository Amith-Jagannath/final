                        </ul>
                    </li>

                </ul>
                <form action="/search_box" class="d-flex p-30px ms-5" role="search" method="post">
                    <input class=" search-input form-control me-2" type="search" name="shoe_name" placeholder="Search"
                        aria-label="Search">
                    <button class=" search1 btn btn-outline-light text-secondary" type="submit"><i
                            class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <form action="/cart" method="post">
                    <button class=" cart btn btn-outline-light text-dark "><i
                            class="fa-solid fa-cart-shopping"></i></button>
                </form>

