    {{#each info}}
    {{#if name}}
    <div class="container col-xxl-8 px-4 py-5">

        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">

            <div class="col-10 col-sm-8 col-lg-6">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <img class="image" src="{{images.img1}}" alt="" />
                    </div>
                    <div class="col-sm-6">
                        <img class="image1" src="{{images.img2}}" alt="" />
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <img class="image" src="{{images.img3}}" alt="" />
                    </div>
                    <div class="col-sm-6">
                        <img class="image1" src="{{images.img4}}" alt="" />
                    </div>
                </div>
            </div>
            <div class="col-lg-6 detail-content" style="top: 150px;">
                <h1 class="display-5 fw-bold lh-1 mb-3">{{description}}</h1>
                <p style="top: 20px;">{{brief}}</p>

                <div class="sizechart">
                    <h4 class="size">Sizes:</h4>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        6
                    </button>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        7
                    </button>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        8
                    </button>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        9
                    </button>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        10
                    </button>
                    <button type="button" class="size-button btn btn-outline-secondary btn-lg px-4 m-2">
                        11
                    </button>
                </div>
                {{!-- <div class=" gap-2 d-md-flex justify-content-md-start d-flex"> --}}
                    <div class="">
                    {{!-- <form action="https://formsubmit.co/amyth2002@gmail.com" method="POST"> --}}
                        <form action="/checkout" method="post">
                            <input id="name" class="input-field" type="hidden" name="Name" value="{{description}}" />
                            <input id="name" class="input-field" type="hidden" name="Cost" value="{{cost}}" />
                            <input id="name" class="input-field" type="hidden" name="Image" value="{{images.img1}}" />
                            <input type="hidden" name="id" value="{{product_id}}" />
                            <h4>Cost:{{cost}}</h4>
                            <br>
                            <button type="submit" class="detail-buy btn btn-dark btn-lg px-4 me-md-2">

                                BUY NOW
                            </button>
                        </form>
                        <form action="/addToCart" method="post">

                            <input type="hidden" name="id" value="{{product_id}}" />
                            {{!-- <button type="submit" class="detail-cart btn btn-outline-secondary btn-lg px-4">
                                WISHLIST
                            </button> --}}
                            <button type="submit"
                                class="  detail-wish btn btn-outline-secondary btn-lg px-4">WISHLIST</button>
                        </form>
                </div>
            </div>

        </div>

    </div>
