                                    <input type="hidden" name="mess" />
                                </form>
                            </li>
                            <li>
                                <form id="form3" action="/addidas" method="post">
                                    <a href="javascript:;" onclick="document.getElementById('form3').submit();"
                                        class="dropdown-item">ADIDAS</a>
                                    <input type="hidden" name="mess" />
                                </form>
                            </li>
                            <li>
                                <form id="form4" action="/crocs" method="post">
                                    <a href="javascript:;" onclick="document.getElementById('form4').submit();"
